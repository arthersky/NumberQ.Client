<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按壓時 -->
    <item android:state_pressed="true">
        <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
        <shape android:shape="rectangle">
            <!--設定圓角，當設置的圓角半徑很大，就可變成弧形邊了-->
            <corners android:radius="10dip" />
            <!--邊框-->
            <stroke android:width="1dip" android:color="@color/QPrimary900" />
            <!--漸層顏色-->
            <gradient android:angle="-90" android:startColor="@color/QPrimary200" android:endColor="@color/QPrimary600"  />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/QPrimary200"
                android:centerColor="@color/QPrimary800"
                android:endColor="@color/QPrimary300"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/QPrimary600" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/QPrimary300" />
            <stroke
                android:width="1dp"
                android:color="@color/QPrimary900" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>